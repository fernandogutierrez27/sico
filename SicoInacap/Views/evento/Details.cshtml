@model SicoInacap.Models.Evento

@{
    ViewBag.Title = "Detalle evento";
}

<nav aria-label="breadcrumb" class="mt-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Gestion de Eventos", "Index", "Eventos")</li>
        <li class="breadcrumb-item active">Detalle Evento</li>
    </ol>
</nav>

<span class="badge badge-pill badge-success mb-2">
    @Html.ActionLink("Regresar", "Index", null, new { @class = "nav-link text-light" })
</span>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>@Html.DisplayName("Organizador")</th>
            <th>@Html.DisplayName("Categoria")</th>
            <th>@Html.DisplayName("Estado")</th>
            <th>@Html.DisplayName("Responsable")</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td id="Organizador">
                @Html.DisplayFor(model => model.Administrador.Username)
            </td>
            <td id="Categoria">
                @Html.DisplayFor(model => model.Categoria.Nombre)
            </td>
            <td id="Estado">
                @Html.DisplayFor(model => model.EstadoEvento.Nombre)
            </td>
            <td id="Responsable">
                @Html.DisplayFor(model => model.Miembro.Username)
            </td>
            <td id="Descripcion">
                @Html.DisplayFor(model => model.Descripcion)
            </td>
            <td id="Nombre">
                @Html.DisplayFor(model => model.Nombre)
            </td>
        </tr>

    </tbody>
</table>


