@model IEnumerable<SicoInacap.Models.Evento>

@{
    ViewBag.Title = "Listado de evento";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear evento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Administrador.Username)
        </th>
        <th>
            @Html.DisplayName("Categoria")
            
        </th>
        <th>
            @Html.DisplayName("Estado")
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Miembro.Fono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Administrador.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoEvento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Miembro.Fono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.Codigo }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.Codigo }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Codigo })
        </td>
    </tr>
}

</table>
